scalar DateTime
scalar Long

type Query {
    user(userId: String!): User
    fiatCustodyAccounts: [CustodyAccount!]
    cryptoCustodyAccounts: [CryptoAccount!]
}

type User {
    id: ID!
    createdOn: DateTime
    profiles: [Profile]
}

enum ProfileType {
    PERSONAL
    BUSINESS
}

type Profile {
    id: ID!
    alias: String!
    type: ProfileType!
    createdOn: DateTime!
    updatedOn: DateTime!
    accounts: [StakeholderAccount!]!
    cryptoAccounts: [CryptoAccount!]!
}

enum Currency {
    CHF
    DKK
    EUR
    GBP
    NOK
    SEK
    USD
}

type CustodyAccount {
    id: ID!
    balance: Long!
    currency: Currency!
    alias: String!
    createdOn: DateTime!
    updatedOn: DateTime!
}

type StakeholderAccount {
    id: ID!
    balance: Long!
    currency: Currency!
    alias: String!
    createdOn: DateTime!
    updatedOn: DateTime!
    portfolios: [Portfolio!]!
}

type Portfolio {
    id: ID!
    alias: String!
    createdOn: DateTime!
    updatedOn: DateTime!
    cryptoAccounts: [CryptoAccount!]!
}

type CryptoAccount {
    id: ID!
    balance: Long!
    currency: String!
    alias: String!
    createdOn: DateTime!
    updatedOn: DateTime!
}
